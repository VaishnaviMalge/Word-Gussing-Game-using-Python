secret_word ="Avinash"
guess =" "
count = 0
limit = 3
out_of_guess = False
Performance =" "

while guess != secret_word and     not(out_of_guess):
	
		count += 1
		if count <= limit:
			guess = input("Enter secret word: ")
		else:
			out_of_guess = True
	


if out_of_guess :
    print("You lost! \nYou have 0 number of chances remained.")
else :
    print(f"Congrats. You win! \nThe number of guess chances you used is {count}")
    
    
